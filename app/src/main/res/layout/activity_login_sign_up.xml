<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginsignup_bg"
    tools:context=".loginSignUp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="406dp"
                android:layout_height="108dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView22"
                app:srcCompat="@drawable/maiact_offer_png" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Pharmacyio"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/donthaveacc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Don't have an account?"
                android:textColor="#000000"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hasaccounttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Already have an account?"
                android:textColor="#000000"
                android:textSize="18sp"

                android:visibility="visible"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="362dp" />

            <Button
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Register your store"
                android:textAllCaps="false"
                android:textColor="#1D49E4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="148dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F2EDED"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/signup_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:padding="15dp"
                        android:text="Sign up"
                        android:textAlignment="center"
                        android:textColor="#1D49E4"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/login_btnuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:padding="15dp"
                        android:text="Login"
                        android:textAlignment="center"
                        android:textColor="#424040"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/signupuser_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <EditText
                            android:id="@+id/signup_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Your name"
                            android:inputType="textPersonName"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/signup_userphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Enter your phone number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/signup_useremail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Enter your email"
                            android:inputType="textEmailAddress"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/signup_userpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/signup_userconfirmpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Confirm password"
                            android:inputType="textPassword"
                            android:padding="12dp"
                            android:paddingStart="16dp"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/signup_btn_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="4dp"
                            android:fontFamily="@font/ubuntu_bold"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:text="sign up"
                            android:textColor="#FFF7F7"
                            android:textSize="20sp"
                            app:backgroundTint="#267B95" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/loginuser_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="gone">


                        <EditText
                            android:id="@+id/login_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Enter your email"
                            android:inputType="textEmailAddress"
                            android:padding="12dp"
                            android:paddingStart="16dp" />

                        <EditText
                            android:id="@+id/login_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/search_bg"
                            android:elevation="3dp"
                            android:ems="10"
                            android:fontFamily="@font/ubuntu_bold"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:padding="12dp"
                            android:paddingStart="16dp" />

                        <Button
                            android:id="@+id/login_user_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Login"
                            android:textColor="#FFFCFC"
                            android:textSize="18sp"
                            app:backgroundTint="#267B95" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>